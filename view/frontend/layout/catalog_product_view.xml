<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="GhoSter\FacebookComment\Block\Container" name="facebook.comment.container" template="GhoSter_FacebookComment::facebook_comment/container.phtml" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Facebook Comment</argument>
                </arguments>
                <block class="GhoSter\FacebookComment\Block\Container\ProductTab" name="facebook.comment.tab" as="facebook_comment"
                       template="GhoSter_FacebookComment::facebook_comment/container/product_tab.phtml"/>
            </block>
        </referenceBlock>
    </body>
</page>