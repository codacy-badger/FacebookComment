<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="GhoSter\FacebookComment\Block\ProductTab" name="facebook.comment.tab" as="facebook_comment" after="reviews"
                   template="GhoSter_FacebookComment::facebook_comment/product_tab.phtml" group="detailed_info" ifconfig="facebook_comment/general/enable">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Facebook Comment</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>